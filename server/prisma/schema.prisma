generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                     Int       @id @default(autoincrement())
  email                  String    @unique
  display_name           String
  password               String
  isSubscribed           Boolean   @default(false)
  verification_code      String
  primary_email_verified Boolean   @default(false)
  profile_image_url      String?
  role                   Role      @default(USER)
  created_at             DateTime  @default(now())
  updated_at             DateTime  @updatedAt
  Project                Project[]
  Team                   Team[]
}

model Issue {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   Int
  attachments String[]
  Column      Column?  @relation(fields: [columnId], references: [id])
  columnId    Int
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  userId      Int
  User        User     @relation(fields: [userId], references: [id])
  Column      Column[]
  Issue       Issue[]
  Team        Team[]
}

model Column {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  tasks       Issue[]
  projectId   Int
  Project     Project @relation(fields: [projectId], references: [id])
}

model Team {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  members     User[]
  project     Project @relation(fields: [projectId], references: [id])
  projectId   Int
}
